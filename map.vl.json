{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Major Bushfires in Australia",
    "subtitle": "Fire events larger than 10,000 hectares (1999-2020)",
    "fontSize": 16,
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "#34495E",
    "subtitleColor": "#7F8C8D"
  },
  "width": 800,
  "height": 600,
  "projection": {
    "type": "albers",
    "scale": 900,
    "rotate": [-133, 0, 0],
    "center": [0, -27],
    "parallels": [-18, -36]
  },
  "layer": [
    {
      "data": { "sphere": true },
      "mark": { "type": "geoshape", "fill": "#e9f5ff" }
    },
    {
      "data": { "graticule": true },
      "mark": { "type": "geoshape", "stroke": "#d4e6f1", "strokeWidth": 0.5 }
    },
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/vega-datasets@v1.29.0/data/world-110m.json",
        "format": { "type": "topojson", "feature": "countries" }
      },
      "mark": { "type": "geoshape", "fill": "#f0ede5", "stroke": "#d4d4d4" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/deldersveld/topojson/master/countries/australia/australia-states.json",
        "format": { "type": "topojson", "feature": "AUS_adm1" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e5e7e9",
        "stroke": "#bababa"
      }
    },
    {
      "data": {
        "url": "fires_final.json",
        "format": {
          "type": "topojson",
          "feature": "fires_filtered_10000ha_bushfires"
        }
      },
      "mark": { "type": "geoshape", "fill": "#e74c3c", "opacity": 0.5 }
    }
  ],
  "config": { "view": { "stroke": null } }
}