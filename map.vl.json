{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Major Bushfires in South-Eastern Australia",
    "subtitle": "Fire events larger than 10,000 hectares (1999-2020)",
    "fontSize": 16,
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "#34495E",
    "subtitleColor": "#7F8C8D"
  },
  "width": 800,
  "height": 600,
  "projection": {
    "type": "albers",
    "rotate": [-135, 0, 0],
    "center": [0, -27]
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "#e9f5ff",
        "stroke": null
      },
      "data": {
        "sphere": true
      }
    },
    {
      "mark": {
        "type": "graticule",
        "stroke": "#d4e6f1",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/deldersveld/topojson/master/countries/australia/australia-states.json",
        "format": {
          "type": "topojson",
          "feature": "AUS_adm1"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e5e7e9",
        "stroke": "#bababa"
      }
    },
    {
      "data": {
        "url": "fires_final.json",
        "format": {
          "type": "topojson",
          "feature": "fires_filtered_10000ha_bushfires"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e74c3c",
        "stroke": null,
        "opacity": 0.4
      }
    }
  ],
  "config": {
    "view": {
      "stroke": null
    }
  }
}