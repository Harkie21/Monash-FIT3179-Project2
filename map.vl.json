{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Major Bushfires in Australia",
    "subtitle": "Fire events larger than 10,000 hectares (1999-2020)",
    "fontSize": 16,
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "#34495E",
    "subtitleColor": "#7F8C8D"
  },
  "width": 800,
  "height": 600,
  "projection": {
    "type": "conicEqualArea",
    "scale": 950,
    "rotate": [-134, 0, 0],
    "center": [0, -27]
  },
  "layer": [
    {
      "data": { "sphere": true },
      "mark": { "type": "geoshape", "fill": "#e9f5ff" }
    },
    {
      "data": { "graticule": true },
      "mark": { "type": "geoshape", "stroke": "#d4e6f1", "strokeWidth": 0.5 }
    },
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/vega-datasets@v1.29.0/data/world-110m.json",
        "format": { "type": "topojson", "feature": "countries" }
      },
      "mark": { "type": "geoshape", "fill": "#f0ede5", "stroke": "#d4d4d4" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/alwaysblazing/Australia-State-TopoJson-MapChart/main/aus-states.json",
        "format": { "type": "topojson", "feature": "aus-states" }
      },
      "mark": { "type": "geoshape", "fill": "#cccccc", "stroke": "#707070" }
    },
    {
      "data": {
        "url": "fires_final.json",
        "format": {
          "type": "topojson",
          "feature": "fires_filtered_10000ha_bushfires"
        }
      },
      "mark": { "type": "geoshape", "fill": "#d62728", "opacity": 0.6 }
    },
    {
      "data": {
        "values": [
          {"city": "Sydney", "lat": -33.8688, "lon": 151.2093},
          {"city": "Melbourne", "lat": -37.8136, "lon": 144.9631},
          {"city": "Brisbane", "lat": -27.4698, "lon": 153.0251},
          {"city": "Perth", "lat": -31.9505, "lon": 115.8605},
          {"city": "Adelaide", "lat": -34.9285, "lon": 138.6007},
          {"city": "Canberra", "lat": -35.2809, "lon": 149.1300},
          {"city": "Hobart", "lat": -42.8821, "lon": 147.3272},
          {"city": "Darwin", "lat": -12.4634, "lon": 130.8456}
        ]
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"}
      },
      "layer": [
        { "mark": {"type": "circle", "color": "black", "size": 15} },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 5,
            "dy": -5,
            "fontSize": 10,
            "fontStyle": "italic"
          },
          "encoding": { "text": {"field": "city", "type": "nominal"} }
        }
      ]
    }
  ],
  "config": { "view": { "stroke": null } }
}